---
import Github from "@components/icons/Github.astro";
import Linkedin from "@components/icons/Linkedin.astro";
import Mail from "@components/icons/Mail.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Travis' homepage" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
        <a href="/resume">Résumé</a>
      </nav>
      <address>
        <a href="https://github.com/Seacant/" title="GitHub" target="_blank">
          <Github />
        </a>
        <a
          href="https://www.linkedin.com/in/travis-fletcher-a13771173/"
          title="LinkedIn"
          target="_blank"
        >
          <Linkedin />
        </a>
        <a href="mailto:contact@tfletch.tech" title="Email" target="_blank">
          <Mail />
        </a>
      </address>
    </header>
    <main>
      <slot />
    </main>
    <footer>Made with ❤️ by Travis Fletcher</footer>
  </body>
</html>
<style is:global>
  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }

  /* Add a better focus indicator to everything */
  @media not (prefers-reduced-motion) {
    a {
      outline-color: var(--layout-background-color);
      transition:
        text-decoration 250ms,
        outline-color 250ms;
    }
  }

  @view-transition {
    navigation: auto;
  }

  a:focus-visible,
  a:hover {
    text-decoration-color: #00000000;
  }

  a:focus-visible {
    outline: 2px solid var(--secondary-link-color);
    outline-offset: 1px;
  }

  /* Theme variables */
  :root {
    font-size: 18px;
    line-height: 1.35;
    font-family: Helvetica;

    color-scheme: light dark;
    scrollbar-gutter: both-edges stable;

    --layout-background-color: #d4d0c9;
    --primary-text-color: #333;
    --primary-link-color: #5a1515;
    --secondary-link-color: #971a1a;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --primary-text-color: #c7beb4;
      --layout-background-color: #151316;
      --primary-link-color: #d58080;
      --secondary-link-color: #dd3a31;
    }
  }

  html,
  body {
    margin: 0px;
    min-height: 100vh;
    background-color: var(--layout-background-color);
    color: var(--primary-text-color);
  }

  a {
    color: var(--primary-link-color);
    text-decoration-color: var(--secondary-link-color);
    text-decoration-thickness: 0.125em;
    text-underline-offset: 2px;

    height: 1lh;
  }

  pre {
    overflow: auto;
  }

  code {
    font-family: monospace;
  }

  svg {
    color: var(--primary-text-color);
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;

    gap: 1ch;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
    line-height: 1.25;
    margin-block: 0.2lh;
  }

  /* h2 + p, h2 + ol, h2 + li, h2 + pre, p + p { */
  :where(h2, h3, p) + :where(p, ol, li, pre) {
    margin-top: 0;
  }

  h1 { font-size: 1.4em; }
  h2 { font-size: 1.2em; }
  h4 { font-size: 1em; }
  h5 { font-size: 1em; }
  h6 { font-size: 1em; }



  header {
    display: flex;
    justify-content: space-between;
    width: min(140ch, 100%);
    padding-top: 1ch;
  }

  @media print {
    header,
    footer {
      visibility: hidden;
    }
  }

  header > nav,
  header > address {
    display: flex;
    gap: 1.5ch;
    margin-left: 1.5ch;
    margin-right: 1.5ch;
  }

  main {
    flex-grow: 1;
    align-content: start;

    display: grid;
    grid-template-columns:
      1ch
      1fr
      min(65ch, calc(100% - 2ch))
      1fr
      1ch;

    --column-content: 3;
    --column-full: 2 / -2;
  }

  main > * {
    grid-column: var(--column-content);
  }

  .full-width {
    grid-column: var(--column-full);
  }
</style>
